# Backend Environment Variables
ENV=development

# Auth mode: "mock" for testing, "cognito" for production
AUTH_MODE=mock

# AWS Region
AWS_REGION=us-east-1

# Amazon Cognito Configuration
# Get these from AWS Console > Cognito > User Pools > Your Pool
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_DOMAIN=

# CORS Origins (comma-separated for multiple)
CORS_ORIGINS=["http://localhost:3000"]

# ============================================================
# Data Provider API Keys
# ============================================================

# Polygon.io - Market data (prices, OHLCV)
# Get your key at: https://polygon.io/
POLYGON_API_KEY=

# Financial Modeling Prep - Fundamentals data (PE, margins, growth)
# Get your key at: https://financialmodelingprep.com/developer/docs/
FMP_API_KEY=

# NewsAPI - News articles for sentiment analysis
# Get your key at: https://newsapi.org/
NEWS_API_KEY=
NEWS_API_BASE_URL=https://newsapi.org/v2
NEWS_API_COUNTRY=us
NEWS_API_PAGE_SIZE=8

# ============================================================
# Cache Configuration
# ============================================================

# Enable/disable provider response caching
PROVIDER_CACHE_ENABLED=true

# Cache backend: "sqlite" or "none"
PROVIDER_CACHE_BACKEND=sqlite

# Cache directory and database path
PROVIDER_CACHE_DIR=.cache/alphalens
PROVIDER_CACHE_DB_PATH=.cache/alphalens/cache.sqlite

# Cache TTL (time-to-live) in seconds
# Note: Higher TTL reduces API calls and helps avoid rate limits on free tiers
MARKET_CACHE_TTL_SECONDS=900
FUNDAMENTALS_CACHE_TTL_SECONDS=86400
NEWS_CACHE_TTL_SECONDS=300

# ============================================================
# HTTP Client Configuration
# ============================================================

HTTP_TIMEOUT_SECONDS=10
HTTP_MAX_RETRIES=2
HTTP_RETRY_BACKOFF_SECONDS=0.5

# Database (future)
# DATABASE_URL=postgresql://user:password@localhost:5432/alphalens

# OpenAI (future)
# OPENAI_API_KEY=
